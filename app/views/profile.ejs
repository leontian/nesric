<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>NESRIC</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">
    <div class="page-header text-left">
        <h3>
            Back to <a href="/">Home</a>
        </h3>
        <h4>
		    Hello, <span class="fa fa-user"></span><%= user.name %> <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </h4>
    </div>
    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <div class="admin">
        <% if (user.group > 1) {%>
            <h4>As admin, you can:</h4>
            <a href="/registeritem" class="btn btn-primary">Register Item</a><span> </span><a href="modifyitem" class="btn btn-primary">Modify Item</a>
        <%}%>
    </div>
    <br/>
    <h4>You can update your contact information:</h4>
	<div class="row">
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
                <form action="/profile" method="post">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value=<%= user.username %> readonly>
                </div>
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" class="form-control" name="firstname" value=<%= user.name %>>
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" class="form-control" name="lastname" value=<%= user.surname %>>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" value=<%= user.email %>>
                </div>
                    <button type="submit" class="btn btn-warning btn-lg">Update</button>
                    </form>
		</div>
	</div>

</div>
</body>
</html>
