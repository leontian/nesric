<!-- views/modifyItem.ejs -->
<!doctype html>
<html>
<head>
    <title>NESRIC</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body 		{ padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header text-left">
            <h3>
                Back to <a href="/">Home</a>
            </h3>
            <h4>
                Hello, <span class="fa fa-user"></span><a href="/profile"><%= user.name %></a> <a href="/logout" class="btn btn-default btn-sm">Logout</a>
            </h4>
        </div>
        <% if (user.group > 1) {%>
            <h4>As admin, you can:</h4>
        <a href="/registeritem" class="btn btn-primary">Register Item</a><span> </span><a href="modifyitem" class="btn btn-primary">Modify Item</a>
        <%}%>
        <br/>
        <h4>Modify Items:</h4>
        <div class="row">
            <div class="col-xs-5">
                <input id="skiSearchTxt" class="form-control"/>
                <a id="searchBtn" class="btn btn-primary btn-block"> Search for Ski Resorts</a>
                <h3>Search Results</h3>
                <table id="searchResults" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th id="head_id"></th>
                        <th id="head_name"></th>
                        <th id="head_address"></th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="col-xs-5">
                <h4 id="title">Item</h4>
                <form action="/modifyitem" method="post">
                    <div class="form-group">
                        <label>ID</label>
                        <input id="id" type="text" class="form-control" name="id" readonly>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input id="name" type="text" class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input id="address" type="text" class="form-control" name="address">
                    </div>
                    <div class="form-group">
                        <label>Acre</label>
                        <input id="acre" type="text" class="form-control" name="acre">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input id="date" type="text" class="form-control" name="date">
                    </div>
                    <div class="form-group">
                        <label>Open Status</label>
                        <input id="openStatus" type="text" class="form-control" name="openStatus">
                    </div>
                    <div class="form-group">
                        <label>Trail</label>
                        <input id="trails" type="text" class="form-control" name="trails">
                    </div>
                    <button id="button" type="submit" class="btn btn-warning btn-lg">Update Item</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="javascript/app2.js"></script>

</body>
</html>
