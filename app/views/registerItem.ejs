<!-- views/registerItem.ejs -->
<!doctype html>
<html>
<head>
    <title>NESRIC</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body 		{
            padding-top: 80px;
            padding-bottom: 80px;
            word-wrap:break-word;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="page-header text-left">
        <h3>
            Back to <a href="/">Home</a>
        </h3>
        <h4>
            Hello, <span class="fa fa-user"></span><a href="/profile"><%= user.name %></a> <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </h4>
    </div>
    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <% if (user.group > 1) {%>
    <h4>As admin, you can:</h4>
    <a href="/registeritem" class="btn btn-primary">Register Item</a><span> </span><a href="modifyitem" class="btn btn-primary">Modify Item</a>
    <%}%>
    <br/>
    <h4>Register Items:</h4>
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <form action="/registerItem" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="address">
                </div>
                <div class="form-group">
                    <label>Acre</label>
                    <input type="text" class="form-control" name="acre">
                </div>
                <div class="form-group">
                    <label>Date</label>
                    <input type="text" class="form-control" name="date">
                </div>
                <div class="form-group">
                    <label>Open Status</label>
                    <input type="text" class="form-control" name="openStatus">
                </div>
                <div class="form-group">
                    <label>Trails</label>
                    <input type="text" class="form-control" name="trails">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Register Item</button>
            </form>
        </div>
    </div>

</div>
</body>
</html>
