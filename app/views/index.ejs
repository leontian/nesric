<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
	<title>NESRIC</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{
            padding-top: 80px;
            padding-bottom: 80px;
        }
        .row {
            padding-top:20px;
        }
        .top-right {
            float: right;
            padding-right: 10px;
            padding-top: 10px;
        }
        th {
            text-align: center;
        }
        #searchResults {
            font-size: medium;
        }

        #searchResultsDetails {
            font-size: medium;
        }

	</style>
</head>
<body>

    <div class="container">
        <div class="top-right">
            <%if (user.username) {%>
            <p> Hello, <a href="/profile"><%if (user.name) {%><%=user.name%><%} else {%> <%=user.username%> <%}%></a>
                <a href="/logout" class="btn btn-default">Logout</a>
            </p>
            <%} else {%>
            <!--<p>Login or Register with:</p>-->

            <a href="/signin" class="btn btn-default"><span class="fa fa-user"></span> Login</a>
            <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Signup</a>
            <%}%>
        </div>
        <div class="jumbotron text-center">

            <h1><!--<span class="fa fa-lock"></span>--> New England Ski Resorts Information Center </h1>


            <div class="row">
                <div class="col-xs-5">
                    <h4>Search NESRIC for Ski Resorts</h4>
                    <input id="skiSearchTxt" class="form-control"/>
                    <button id="searchBtn" class="btn btn-primary btn-block"> Search for Ski Resorts</button>
                    <h4>Search Results</h4>
                    <table id="searchResults" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th id="head_name"></th>
                            <th id="head_address"></th>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
                <div id="searchResultsDetails" class="col-xs-5">
                    <h4 id="title"></h4>
                    <p id="address"></p>
                    <p id="acre"></p>
                    <p id="date"></p>
                    <p id="openStatus"></p>
                    <p id="trials"></p>
                    <p id="description"></p>
                    <p id="lifts"></p>
                    <p id="elevation"></p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="javascript/app.js"></script>
</body>
</html>